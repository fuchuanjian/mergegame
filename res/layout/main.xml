<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
     >

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
	 <ImageView
	     android:id="@+id/mode_img"
	     android:layout_alignParentTop="true"
	     android:layout_alignParentLeft="true"
	     android:layout_marginLeft="8dp"
	     android:layout_marginTop="8dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/mode2" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="9dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/icon_help"
                android:background="@drawable/btn_pressed_seletor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_help" />
            <ImageView
                android:id="@+id/icon_sound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_pressed_seletor"
                android:src="@drawable/sound_on" />
            <ImageView
                android:id="@+id/icon_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_pressed_seletor"
                android:src="@drawable/ic_action_settings" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/score_layout"
        android:layout_below="@id/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <View
            android:layout_width="0.0dip"
            android:layout_height="1dp"
            android:layout_weight="1.0"/>

        <LinearLayout
            style="@style/ScoreStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8.0dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/score"
                android:textColor="@color/white"
                android:textSize="18.0sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvScore"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="25.0sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="0.0dip"
            android:layout_height="1dp"
            android:layout_weight="3.0" />

        <LinearLayout
            style="@style/ScoreStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8.0dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bestscore"
                android:textColor="@color/white"
                android:textSize="18.0sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvBestScore"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="25.0sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="0.0dip"
            android:layout_height="1dp"
            android:layout_weight="1.0"/>
    </LinearLayout>


    <FrameLayout
        android:id="@+id/gameContainer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/score_layout" >

        <com.chuanonly.mergegame.GameView
            android:id="@+id/gameView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <com.chuanonly.mergegame.AnimLayer
            android:id="@+id/animLayer"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </FrameLayout>
    
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >
	  <ImageView
	     	android:clickable="true"
	      	android:id="@+id/result_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:src="@drawable/win" />
        <LinearLayout
            android:id="@+id/setting_panel_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/black_alpha_shape"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/undo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/setting_btn_selector"
                android:gravity="center"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="@string/back"
                android:textColor="@color/white"
                android:singleLine="true"
                android:textSize="18sp" />
            <View android:layout_width="1dp"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/divider"/>

            <TextView
                android:id="@+id/ok"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/setting_btn_selector"
                android:gravity="center"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="@string/newgame"
                android:focusable="true" 
                android:textColor="@color/white"
                android:singleLine="true"
                android:textSize="18sp"  />
            <View android:layout_width="1dp"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/divider"/>
            <ImageView
                android:id="@+id/arrow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/setting_btn_selector"
                android:minWidth="35dp"
                android:src="@drawable/arrow_down" />
        </LinearLayout>
      <LinearLayout
        android:id="@+id/layout_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_alpha"
        android:orientation="vertical" />
    </LinearLayout>
</RelativeLayout>