<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/barrage_popupwindow_bg">


	<RelativeLayout     
	        android:id="@+id/layout1"        
	    	android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/list_selector"
            android:padding="10dp">
         <CheckBox 
             android:clickable="false"
             android:minWidth="23dp"
             android:id="@+id/checkbox_1"
             style="@style/setting_item_checkbox" />
        <TextView
            android:layout_toRightOf="@id/checkbox_1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="1024"
            android:textSize="16sp" />
        </RelativeLayout>

	<View 
	    android:id="@+id/divider1"
	    android:layout_width="wrap_content"
	    android:layout_marginLeft="2dp"
	    android:layout_below="@id/layout1"
	    android:layout_alignLeft="@id/layout1"
	    android:layout_alignRight="@id/layout1"
	    android:layout_height="1dp"
	    android:background="@drawable/setting_list_divider"/> 
	
	<RelativeLayout
            android:id="@+id/layout2"
            android:layout_below="@id/divider1"
	    	android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">
           <CheckBox 
             android:clickable="false"
             android:minWidth="23dp"
             android:id="@+id/checkbox_2"
             style="@style/setting_item_checkbox" />
        <TextView
            android:layout_toRightOf="@id/checkbox_2"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="2048"
            android:textSize="16sp" />
	</RelativeLayout>
<View 
	    android:id="@+id/divider2"
	    android:layout_width="wrap_content"
	    android:layout_marginLeft="2dp"
	    android:layout_below="@id/layout2"
	    android:layout_alignLeft="@id/layout2"
	    android:layout_alignRight="@id/layout2"
	    android:layout_height="1dp"
	    android:background="@drawable/setting_list_divider"/> 
	
	<RelativeLayout
	    android:id="@+id/layout3"
            android:layout_below="@id/divider2"
	    	android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">
           <CheckBox 
             android:clickable="false"
             android:minWidth="23dp"
             android:id="@+id/checkbox_3"
             style="@style/setting_item_checkbox" />
        <TextView
            android:layout_toRightOf="@id/checkbox_3"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="4096"
            android:textSize="16sp" />
	</RelativeLayout>
	<View 
	    android:id="@+id/divider3"
	    android:layout_width="wrap_content"
	    android:layout_marginLeft="2dp"
	    android:layout_below="@id/layout3"
	    android:layout_alignLeft="@id/layout3"
	    android:layout_alignRight="@id/layout3"
	    android:layout_height="1dp"
	    android:background="@drawable/setting_list_divider"/> 
	
	<RelativeLayout
	    	android:id="@+id/layout4"
            android:layout_below="@id/divider3"
	    	android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">
           <CheckBox 
             android:clickable="false"
             android:minWidth="23dp"
             android:id="@+id/checkbox_4"
             style="@style/setting_item_checkbox" />
        <TextView
            android:layout_toRightOf="@id/checkbox_4"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Endless"
            android:textSize="16sp" />
	</RelativeLayout>
</RelativeLayout>